<MyLayout>
    orientation: "vertical"
    size_hint: (0.45, 0.75)
    size: root.width, root.height
    pos_hint: {"center_x": 0.5, "center_y": 0.5}

    Label:
        text: "Password Generator!!!"
        size_hint_y: 0.35

    GridLayout:
        rows: 3
        cols: 2

        Label:
            text: "Easy"

        CheckBox:
            group: "Options"
            on_active: root.checkbox_click("easy")

        Label:
            text: "Normal"

        CheckBox:
            group: "Options"
            on_active: root.checkbox_click("normal")

        Label:
            text: "Hard"

        CheckBox:
            group: "Options"
            on_active: root.checkbox_click("hard")

    GridLayout:
        rows: 2
        cols: 1
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        Label:
            id: password
            text: ""
            size_hint: (0.7, 0.2)

        Button:
            text: "Copy"
            size_hint: (0.05, 0.05)
            on_press: root.copy()
